    <!--set preset value to properties by property and sue inner bean-->
    <bean id="editText" class="spring2011.service.EditText" autowire="byName">

        <property name="penTool">
            <bean class="spring2011.service.PenTool">
                <property name="color" value="blue"/>
                <property name="size">
                    <list>
                        <value>=1.cm</value>
                        <value>=2.cm</value>
                        <value>=3.cm</value>
                    </list>
                </property>
            </bean>
        </property>

        <property name="markerTool">
            <bean class="spring2011.service.MarkerTool">
                <constructor-arg index="0" value="Red"/>
                <constructor-arg index="1" value="1.cm"/>
            </bean>
        </property>

        <property name="eraserTool">
            <bean class="spring2011.service.EraserTool" autowire="byName">
            </bean>
        </property>

    </bean>

</beans>